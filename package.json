{
    "name": "modern-node-express-app",
    "version": "1.0.0",
    "description": "Modern Node Express App",
    "scripts": {
        "build": "tsc -p .",
        "dev:ts": "tsc -w",
        "dev:js": "nodemon dist/index.js",
        "dev": "concurrently npm:dev:*",
        "start": "node dist/index.js",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "docker-build:dev": "docker build -t modern-node-express-app:dev -f Dockerfile.dev .",
        "docker-build:prod": "docker build -t modern-node-express-app:prod -f Dockerfile.prod .",
        "docker-run:dev-win": "docker run -it --rm -d --name modern-node-express-app-dev -v %cd%/src:/app/src:ro -v %cd%/public:/app/public:ro -v /app/node_modules -e NODE_ENV=development -e CHOKIDAR_USEPOLLING=true -p 5000:5000 modern-node-express-app:dev",
        "docker-run:dev-linux": "docker run -it --rm -d --name modern-node-express-app-dev -v $(pwd)/src:/app/src:ro -v $(pwd)/public:/app/public:ro -v /app/node_modules -e NODE_ENV=development -e CHOKIDAR_USEPOLLING=true -p 5000:5000 modern-node-express-app:dev",
        "docker-run:prod": "docker run -it --rm -p 5000:5000 --name modern-node-express-app-prod -d -e NODE_ENV=production modern-node-express-app:prod"
    },
    "author": "alessandrofoglia07",
    "license": "MIT",
    "type": "module",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "mongoose": "^7.5.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.14",
        "@types/eslint": "^8.44.2",
        "@types/express": "^4.17.17",
        "@types/node": "^20.6.3",
        "@typescript-eslint/eslint-plugin": "^6.7.2",
        "@typescript-eslint/parser": "^6.7.2",
        "concurrently": "^8.2.1",
        "eslint": "^8.49.0",
        "nodemon": "^3.0.1",
        "typescript": "^5.2.2"
    }
}
